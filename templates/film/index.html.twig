{% extends 'base.html.twig' %}

{% block title %} Фильмы {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('filmPage.css', 'css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <h1>Фильмы</h1>
    <div class="wrap">
        {% for film in films %}
        <div class="box">
            <div class="box-top">
                <img class="box-image" src="{{ asset('uploads/films/' ~ film.image, 'images') }}" alt="error">
                <div class="title-flex">
                    <h3 class="box-title">{{ film.name }}</h3>
                    <p class="user-follow-info">Рейтинг: {{ film.rating }} IMDb</p>
                </div>
                <p class="description">Год выпуска: {{ film.releaseDate.format('Y') }}</p>
                <p class="description">Страна: {{ film.country }}</p>
                <p class="description">Бюджет: {{ film.budget | number_format(0, ',', ' ')}}$</p>
            </div>
            <a href="{{ path('app_film_filmDetails', { id: film.id }) }}" id="read" class="button link-offset-2 link-underline link-underline-opacity-0">Подробнее</a>
        </div>
        {% endfor %}
    </div>
{% endblock %}
