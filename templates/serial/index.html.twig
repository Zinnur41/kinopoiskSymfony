{% extends 'base.html.twig' %}

{% block title %} Сериалы {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('filmPage.css', 'css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <h1>Сериалы</h1>
    <div class="wrap">
        {% for serial in serials %}
            <div class="box">
                <div class="box-top">
                    <img class="box-image" src="" alt="error">
                    <div class="title-flex">
                        <h3 class="box-title">{{ serial.name }}</h3>
                        <p class="user-follow-info">{{ serial.rating }}</p>
                    </div>
                    <p class="description">{{ serial.description }}</p>
                </div>
                <a href="#" class="button link-offset-2 link-underline link-underline-opacity-0">Подробнее</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
