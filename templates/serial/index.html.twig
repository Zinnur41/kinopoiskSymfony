{% extends 'base.html.twig' %}

{% block title %} Сериалы {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('filmPage.css', 'css') }}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <h1>Сериалы</h1>
    <div class="wrap">
        {% for serial in serials %}
            <div class="box">
                <div class="box-top">
                    <img class="box-image" src="{{ asset('uploads/serials/' ~ serial.image, 'images') }}" alt="error">
                    <div class="title-flex">
                        <h3 class="box-title">{{ serial.name }}</h3>
                        <p class="user-follow-info">Рейтинг: {{ serial.rating | number_format(1) }} IMDb</p>
                    </div>
                    <p class="description">Год выпуска: {{ serial.releaseDate.format('Y') }}</p>
                    <p class="description">Страна: {{ serial.country }}</p>
                    <p class="description">Бюджет: {{ serial.budget | number_format(0, ',', ' ')}}$</p>
                </div>
                <a href="{{ path('app_serial_serialDetails', { id: serial.id }) }}" id="read" class="button link-offset-2 link-underline link-underline-opacity-0">Подробнее</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
